---
import Section from '@components/shared/Section/Section.astro'
import Icon from '@components/Icon.astro'

const COMPANIES = [
  {
    icon: 'scopely',
    class: 'w-14 sm:w-16',
    url: 'https://www.scopely.com',
    label: 'Scopely company logo'
  },
  {
    icon: 'chessable',
    class: 'w-16 sm:w-20',
    url: 'https://www.chessable.com',
    label: 'Chessable company logo'
  },
  {
    icon: 'ntt-data',
    class: 'w-16 sm:w-20',
    url: 'https://www.nttdata.com',
    label: 'NTTData company logo'
  },
  {
    icon: 'marfeel',
    class: 'w-20 sm:w-24',
    url: 'https://www.marfeel.com',
    label: 'Marfeel company logo'
  }
]
---

<Section class="bg-gray-50 px-6 py-8 dark:bg-transparent sm:py-8 md:py-8">
  <div
    class="flex flex-wrap items-center justify-center gap-x-28 gap-y-6 text-gray-500 dark:text-gray-400"
  >
    {
      COMPANIES.map(({ icon, class: className, url, label }) => (
        <a href={url} class="inline-flex" target="_blank" rel="noopener noreferrer">
          <Icon icon={icon} class:list={['hover:text-gray-900 dark:text-white/90', className]} />
          <span class="sr-only">{label}</span>
        </a>
      ))
    }
  </div>
</Section>
