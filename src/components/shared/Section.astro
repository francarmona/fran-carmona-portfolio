---
interface Props {
  title?: string
  description?: string
  class?: string
}

const { title, description, class: className } = Astro.props
---

<section
  class:list={[
    'border-t border-slate-300/30 py-16 dark:bg-transparent sm:py-20 md:py-24',
    className
  ]}
>
  <div class="container">
    {title && <h2 class="text-center text-4xl font-bold dark:text-white/85">{title}</h2>}
    {
      description && (
        <p class="pt-3 text-center text-xl text-gray-600 dark:text-gray-400">{description}</p>
      )
    }

    <div class={title ? 'mt-14' : undefined}>
      <slot />
    </div>
  </div>
</section>
