---
import Icon from '@components/Icon.astro'

interface Props {
  name: string
  icon: string
  iconClass?: string
}
const { name, icon, iconClass = 'h-9 w-9 sm:h-11 sm:w-11' } = Astro.props
---

<div
  class="flex h-[110px] w-[110px] flex-col items-center justify-between rounded border bg-white p-4 shadow-sm dark:bg-gray-300 sm:h-[120px] sm:w-[120px]"
>
  <Icon icon={icon} class={iconClass} />
  <div class="text-center text-sm font-medium">{name}</div>
</div>
